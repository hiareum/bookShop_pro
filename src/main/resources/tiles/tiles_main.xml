<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<!--DTD는 XML 문서의 구조와 유효성을 정의하는 것으로, 이 경우 Tiles 설정 파일이 어떤 요소와 속성을 사용할 수 있는지를 
	정의 -->
	
	
	<tiles-definitions>
	<!--baseLayout라는 이름으로 레이아웃 정의   /WEB-INF/views/common/layout.jsp 파일을 템플릿으로 사용-->
	<!-- 쇼핑몰의 기본 레이아웃 -->
		<definition name="baseLayout"
		template="/WEB-INF/views/common/layout.jsp">
		<!--  put-attribute으로 레이아웃 속성설정 name:속성이름 / value:속성값 -->
		<put-attribute name="title" value="레이아웃 페이지" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="side" value="/WEB-INF/views/common/side.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
		<put-attribute name="quickMenu" value="/WEB-INF/views/common/quickMenu.jsp" />
	</definition>
<!-- /main/main이라는 이름으로 정의된 타일즈 정의가 baseLayout를 상속 , extends 속성을 사용하여 부모 템플릿인 baseLayout을 상속함-->
<!--  그 중 main페이지 레이아웃-->
	<definition name="/main/main" extends="baseLayout">
		<put-attribute name="title" value="쇼핑몰 메인페이지" />
		<put-attribute name="body" value="/WEB-INF/views/main/main.jsp" />
	</definition>
</tiles-definitions>